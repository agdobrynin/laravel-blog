{
    "openapi": "3.0.0",
    "info": {
        "title": "Blog post api",
        "version": "1.0.1"
    },
    "servers": [
        {
            "url": "/api",
            "description": "API main endpoint"
        }
    ],
    "paths": {
        "/take-token": {
            "post": {
                "tags": [
                    "Authenticate"
                ],
                "summary": "Get access token by login and password",
                "operationId": "getAccessToken",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ApiDoLoginRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success credentials.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ApiLoginResponseSuccessDto"
                                }
                            }
                        }
                    },
                    "422": {
                        "$ref": "#/components/responses/ResponseApiValidationError"
                    },
                    "400": {
                        "$ref": "#/components/responses/ResponseApiError"
                    },
                    "403": {
                        "$ref": "#/components/responses/ResponseApiError"
                    }
                }
            }
        },
        "/invalidate-token": {
            "delete": {
                "tags": [
                    "Authenticate"
                ],
                "description": "Invalidate access token",
                "operationId": "invalidatedAccessToken",
                "responses": {
                    "204": {
                        "description": "Token was invalidated",
                        "content": {
                            "application/json": {
                                "schema": {}
                            }
                        }
                    },
                    "401": {
                        "$ref": "#/components/responses/ResponseApiError"
                    }
                },
                "security": [
                    {
                        "apiKeyBearer": []
                    }
                ]
            }
        },
        "/user": {
            "get": {
                "tags": [
                    "Authenticate"
                ],
                "description": "Info about authenticated user",
                "operationId": "getUserInfo",
                "responses": {
                    "401": {
                        "$ref": "#/components/responses/ResponseApiError"
                    },
                    "200": {
                        "description": "Info about user",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserResource"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "apiKeyBearer": []
                    }
                ]
            }
        },
        "/v1/posts/{post}/comments": {
            "get": {
                "tags": [
                    "Comments"
                ],
                "description": "Show comments by post id. Comments with pagination.",
                "operationId": "getCommentsByPostId",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/Accept-Language"
                    },
                    {
                        "name": "post",
                        "in": "path",
                        "description": "Blog post Id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "$ref": "#/components/parameters/QueryParameterPerPage"
                    },
                    {
                        "$ref": "#/components/parameters/QueryParameterPage"
                    }
                ],
                "responses": {
                    "401": {
                        "$ref": "#/components/responses/ResponseApiError"
                    },
                    "404": {
                        "$ref": "#/components/responses/ResponseApiError"
                    },
                    "422": {
                        "$ref": "#/components/responses/ResponseApiValidationError"
                    },
                    "500": {
                        "$ref": "#/components/responses/ResponseApiError"
                    },
                    "200": {
                        "description": "Comments list with pagination for blog post id",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CommentResourceCollection"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "apiKeyBearer": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Comments"
                ],
                "description": "Store comment to blog post by postId",
                "operationId": "storeCommentToPostById",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/Accept-Language"
                    },
                    {
                        "name": "post",
                        "in": "path",
                        "description": "Blog post Id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CommentRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "401": {
                        "$ref": "#/components/responses/ResponseApiError"
                    },
                    "404": {
                        "$ref": "#/components/responses/ResponseApiError"
                    },
                    "422": {
                        "$ref": "#/components/responses/ResponseApiValidationError"
                    },
                    "500": {
                        "$ref": "#/components/responses/ResponseApiError"
                    },
                    "201": {
                        "description": "Comment was added",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CommentResource"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "apiKeyBearer": []
                    }
                ]
            }
        },
        "/v1/posts/{post}/comments/{comment}": {
            "get": {
                "tags": [
                    "Comments"
                ],
                "description": "Show comment by post id and comment id",
                "operationId": "showCommentByPostIdAndCommentId",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/Accept-Language"
                    },
                    {
                        "name": "post",
                        "in": "path",
                        "description": "Blog post Id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "comment",
                        "in": "path",
                        "description": "Comment Id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "401": {
                        "$ref": "#/components/responses/ResponseApiError"
                    },
                    "404": {
                        "$ref": "#/components/responses/ResponseApiError"
                    },
                    "500": {
                        "$ref": "#/components/responses/ResponseApiError"
                    },
                    "200": {
                        "description": "Comment",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CommentResource"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "apiKeyBearer": []
                    }
                ]
            },
            "put": {
                "tags": [
                    "Comments"
                ],
                "description": "Update comment by comment id",
                "operationId": "updateCommentById",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/Accept-Language"
                    },
                    {
                        "name": "post",
                        "in": "path",
                        "description": "Blog post Id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "comment",
                        "in": "path",
                        "description": "Comment Id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CommentRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "401": {
                        "$ref": "#/components/responses/ResponseApiError"
                    },
                    "403": {
                        "$ref": "#/components/responses/ResponseApiError"
                    },
                    "404": {
                        "$ref": "#/components/responses/ResponseApiError"
                    },
                    "422": {
                        "$ref": "#/components/responses/ResponseApiValidationError"
                    },
                    "500": {
                        "$ref": "#/components/responses/ResponseApiError"
                    },
                    "200": {
                        "description": "Comment was updated",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CommentResource"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "apiKeyBearer": []
                    }
                ]
            },
            "delete": {
                "tags": [
                    "Comments"
                ],
                "description": "Destroy comment by comment id",
                "operationId": "destroyCommentById",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/Accept-Language"
                    },
                    {
                        "name": "post",
                        "in": "path",
                        "description": "Blog post Id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "comment",
                        "in": "path",
                        "description": "Comment Id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "401": {
                        "$ref": "#/components/responses/ResponseApiError"
                    },
                    "403": {
                        "$ref": "#/components/responses/ResponseApiError"
                    },
                    "404": {
                        "$ref": "#/components/responses/ResponseApiError"
                    },
                    "500": {
                        "$ref": "#/components/responses/ResponseApiError"
                    },
                    "204": {
                        "description": "Comment was destroyed",
                        "content": {
                            "application/json": {
                                "schema": {}
                            }
                        }
                    }
                },
                "security": [
                    {
                        "apiKeyBearer": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "ApiErrorResponseDto": {
                "title": "Response for error",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Description of what happened"
                    },
                    "exception": {
                        "type": "string",
                        "example": "Symfony\\Component\\HttpKernel\\Exception\\NotFoundHttpException"
                    }
                },
                "type": "object"
            },
            "ApiLoginResponseSuccessDto": {
                "title": "Response for success get access token",
                "properties": {
                    "token": {
                        "type": "string",
                        "example": "5|YEjTnntLJZDlMPrRh1haTU9BLyWfdzIXHoNddFj5"
                    },
                    "device": {
                        "type": "string",
                        "example": "swagger ui"
                    },
                    "type": {
                        "type": "string",
                        "example": "Bearer"
                    }
                },
                "type": "object"
            },
            "ApiValidationDto": {
                "title": "Validation errors",
                "properties": {
                    "message": {
                        "description": "The given data was invalid.",
                        "type": "string"
                    },
                    "errors": {
                        "oneOf": [
                            {
                                "$ref": "#/components/schemas/ApiValidationItemDto"
                            }
                        ],
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "ApiValidationItemDto": {
                "title": "Validation item errors",
                "properties": {
                    "fieldName": {
                        "description": "Key of error display as field name",
                        "type": "array",
                        "items": {
                            "type": "string",
                            "collectionFormat": "multi"
                        },
                        "example": [
                            "some errors 1",
                            "some errors 2"
                        ]
                    }
                },
                "type": "object"
            },
            "ApiDoLoginRequest": {
                "title": "Request body for get access token",
                "properties": {
                    "email": {
                        "type": "email",
                        "example": "felix@example.net"
                    },
                    "password": {
                        "type": "string",
                        "example": "password"
                    },
                    "device": {
                        "type": "string",
                        "example": "swagger ui device"
                    }
                },
                "type": "object"
            },
            "CommentRequest": {
                "title": "Request body for comment model",
                "properties": {
                    "content": {
                        "type": "string",
                        "example": "My first comment here"
                    }
                },
                "type": "object"
            },
            "CommentResource": {
                "required": [
                    "id",
                    "content",
                    "createdAt",
                    "updatedAt"
                ],
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "content": {
                        "type": "string"
                    },
                    "createdAt": {
                        "description": "Date and time created comment as ISO format",
                        "type": "string"
                    },
                    "updatedAt": {
                        "description": "Date and time updated comment as ISO format",
                        "type": "string"
                    },
                    "user": {
                        "$ref": "#/components/schemas/CommentUserResource"
                    }
                },
                "type": "object"
            },
            "CommentUserResource": {
                "required": [
                    "id",
                    "name"
                ],
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "description": "User name",
                        "type": "string"
                    },
                    "avatar": {
                        "description": "Url to user avatar image",
                        "type": "string",
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "UserResource": {
                "title": "Info about authenticated user",
                "required": [
                    "id",
                    "name",
                    "email",
                    "createdAt",
                    "updatedAt"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "description": "User name",
                        "type": "string",
                        "example": "Destiny Amy"
                    },
                    "email": {
                        "description": "Email",
                        "type": "string",
                        "example": "felix@example.net"
                    },
                    "createdAt": {
                        "description": "Date and time created comment as ISO format",
                        "type": "string",
                        "example": "2023-04-29 19:00:58"
                    },
                    "updatedAt": {
                        "description": "Date and time updated comment as ISO format",
                        "type": "string",
                        "example": "2023-04-29 19:00:58"
                    },
                    "avatar": {
                        "description": "Url to user avatar image",
                        "type": "string",
                        "example": "http://localhost//avatars/bvE.jpg",
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "CommentResourceCollection": {
                "description": "List of Blog post comments with pagination",
                "type": "object",
                "allOf": [
                    {
                        "$ref": "#/components/schemas/Paginate"
                    },
                    {
                        "properties": {
                            "data": {
                                "type": "array",
                                "items": {
                                    "$ref": "#/components/schemas/CommentResource"
                                }
                            }
                        }
                    }
                ]
            },
            "Paginate": {
                "description": "Paginate information",
                "properties": {
                    "links": {
                        "description": "Links to different pages in collection. Short version.",
                        "properties": {
                            "first": {
                                "description": "Link to first page in collection",
                                "type": "string",
                                "example": "http://localhost/api/v1/posts/1/comments?perPage=10&page=1"
                            },
                            "last": {
                                "description": "Link to last page in collection",
                                "type": "string",
                                "example": "http://localhost/api/v1/posts/1/comments?perPage=10&page=10"
                            },
                            "prev": {
                                "description": "Link to previous page from current page in collection",
                                "type": "string",
                                "example": "http://localhost/api/v1/posts/1/comments?perPage=10&page=10",
                                "nullable": true
                            },
                            "next": {
                                "description": "Link to next page from current page in collection",
                                "type": "string",
                                "example": "http://localhost/api/v1/posts/1/comments?perPage=10&page=2",
                                "nullable": true
                            }
                        },
                        "type": "object"
                    },
                    "meta": {
                        "properties": {
                            "links": {
                                "type": "array",
                                "items": {
                                    "properties": {
                                        "url": {
                                            "type": "string",
                                            "example": "http://localhost/api/v1/posts/1/comments?perPage=10&page=1",
                                            "nullable": true
                                        },
                                        "label": {
                                            "type": "string",
                                            "example": "1",
                                            "nullable": true
                                        },
                                        "active": {
                                            "type": "boolean",
                                            "example": true
                                        }
                                    },
                                    "type": "object"
                                }
                            },
                            "current_page": {
                                "description": "Current page",
                                "type": "integer",
                                "example": 1
                            },
                            "path": {
                                "description": "Base link",
                                "type": "string",
                                "example": "http://localhost/api/v1/posts/1/comments"
                            },
                            "per_page": {
                                "description": "How many items show per page",
                                "type": "integer",
                                "example": 10
                            },
                            "from": {
                                "description": "Index value \"from\" in collection",
                                "type": "integer",
                                "example": 1
                            },
                            "to": {
                                "description": "Index value \"to\" in collection",
                                "type": "integer",
                                "example": 10
                            },
                            "total": {
                                "description": "Total items in collection",
                                "type": "integer",
                                "example": 95
                            },
                            "last_page": {
                                "description": "Last page in collection",
                                "type": "integer",
                                "example": 10
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            }
        },
        "responses": {
            "ResponseApiError": {
                "description": "Error message",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/ApiErrorResponseDto"
                        }
                    }
                }
            },
            "ResponseApiValidationError": {
                "description": "Validation errors",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/ApiValidationDto"
                        }
                    }
                }
            }
        },
        "parameters": {
            "Accept-Language": {
                "name": "Accept-Language",
                "in": "header",
                "schema": {
                    "description": "Application locale",
                    "type": "string",
                    "default": "en",
                    "enum": [
                        "en",
                        "ru"
                    ],
                    "example": "en"
                }
            },
            "QueryParameterPerPage": {
                "name": "perPage",
                "in": "query",
                "description": "How comments show per page",
                "required": false,
                "schema": {
                    "type": "integer",
                    "default": 15
                }
            },
            "QueryParameterPage": {
                "name": "page",
                "in": "query",
                "description": "Current page",
                "required": false,
                "schema": {
                    "type": "integer",
                    "default": 1
                }
            }
        },
        "securitySchemes": {
            "apiKeyBearer": {
                "type": "http",
                "description": "Bearer token authorization",
                "name": "Authorization",
                "in": "header",
                "bearerFormat": "string",
                "scheme": "bearer"
            }
        }
    }
}